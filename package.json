{
  "name": "ecommerce",
  "version": "1.0.0",
  "private": true,

  "engines": {
    "node": "20.x"
  },

  "workspaces": [
    "frontend",
    "backend"
  ],

  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "knip": "^5.63.1",
    "turbo": "^2.5.6"
  },

  "scripts": {
    "dev": "concurrently -n FE,BE -c green,blue \"npm --workspace frontend run dev\" \"npm --workspace backend run dev\"",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prepare": "husky"
  }
}
